script/source = "extends \"res://scenes/characters/generic_character_behaviour.gd\"

func _ready():
	if (!get_tree().root.is_queued_for_deletion()):
		._setup_collision()
		ammo = 10 # starting ammo
		energy = 0 # starting energy
		health = 100 # starting health
		maxJumpCount = 2 # maximum jump count for character
		mainCharacter = true # specify main character
		type = \"male_ninja\" # character type
		velocity = Vector2(0, 0) # reset character velocity
		currentJumpCount = 2 # set character max jump count
		maxSpeed = 450   # set character max speed
		action1Damage = 20
		action2Damage = 25
		action3Damage = 10
		
		playerSprite = get_node(\"AnimatedSprite\")
		playerSprite.animation = type + \"_jump_glide\"
		bullet_scene = preload(\"res://scenes/characters/male_ninja/Bullet_Scene.tscn\")
		
		._move_right()
		print(\":: \" + type + \" character spawed ::\")
		set_process(true)
	pass


func _process(delta):
	._start_process(delta)
	# check for character control
	control_character(delta)
		

func control_character(delta):
	# reset default behaviour
	._reset_character_sprite_states(delta)
	
	if (!dazed):
		# Handle input events
		if (Input.is_action_just_pressed(\"action_1\") and !action1 and !action2 and !action3 and ammo > 0):
			._shoot_bullet(0)
			
			if (currentJumpCount > 0):
				playerSprite.animation = type + \"_jump_shoot\"
			elif (facingDirection != 0):
				playerSprite.animation = type + \"_shoot\"
			elif (facingDirection == 0):
				playerSprite.animation = type + \"_shoot\"
		
			._emit_refresh_hud()
		elif (Input.is_action_just_pressed(\"action_2\") and !action1 and !action2 and !action3):
			action2 = true
			._melee_attack_collision()
			if (currentJumpCount > 0):
				playerSprite.animation = type + \"_jump_melee\"
			else:
				playerSprite.animation = type + \"_melee\"
				
		elif (Input.is_action_just_pressed(\"action_3\") and facingDirection != 0 and !action3):
			action3 = true
			playerSprite.animation = type + \"_slide\"
			._slide_attack_collision()
		elif (Input.is_action_just_pressed(\"move_jump\") and currentJumpCount < maxJumpCount and !action3):
			currentJumpCount += 1
			playerSprite.frame = 0
			repeatFrames = false
			action1 = false
			action2 = false
			action3 = false
			
			if (currentJumpCount > 1):
				playerSprite.animation = type + \"_jump_glide\"
				disableGravity = true
				playerSpeedY = -(JUMPFORCE / 4)
			else:
				playerSprite.animation = type + \"_jump\"
				playerSpeedY = -JUMPFORCE
			
		elif (Input.is_action_pressed(\"move_left\")):
			._move_left()
		elif (Input.is_action_pressed(\"move_right\")):
			._move_right()
		elif (Input.is_action_pressed(\"respawn\")):
			._emit_reposition()
		else:
			if (health <= 0):
				playerSprite.animation = type + \"_dead\"
				repeatFrames = false
			elif (!action2):
				facingDirection = 0
				if (currentJumpCount == 0 and !action1 and !action2 and !action3):
					playerSprite.animation = type + \"_idle\"
					repeatFrames = true
		pass"

