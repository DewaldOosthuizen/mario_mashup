script/source = "extends Sprite

# variables
var playerSprite
var reactArea

signal touchedSaw(object, saw)

func _ready():
	playerSprite = self
	reactArea = get_node(\"Area2D\")
	set_process(true)
	pass
	
	
#warning-ignore:unused_argument
func _process(delta):
	playerSprite.rotation += 5
	_area_check()
	pass
	

func _area_check():
	var area = reactArea.get_overlapping_bodies()
	if (area.size() != 0):
		for body in area:
			if (body.is_in_group(\"enemy_character\")):
				emit_signal(\"touchedSaw\", body, self)
			elif (body.is_in_group(\"character\")):
				emit_signal(\"touchedSaw\", body, self)"

