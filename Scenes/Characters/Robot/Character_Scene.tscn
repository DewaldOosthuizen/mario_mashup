script/source = "extends \"res://Scenes/Characters/generic_character_behaviour.gd\"

const bullet_scene = preload(\"res://Scenes/Characters/Robot/Bullet_Scene.tscn\")
onready var AreaStandCollisionShape2D = get_node(\"CharacterArea2D/StandCollisionShape2D\")
onready var AreaSlideCollisionShape2D = get_node(\"AttackArea2D/SlideAttackCollisionShape2D\")
onready var AreaLeftAttackCollisionShape2D = get_node(\"AttackArea2D/LeftAttackCollisionShape2D\")
onready var AreaRightAttackCollisionShape2D = get_node(\"AttackArea2D/RightAttackCollisionShape2D\")
onready var StandCollisionShape2D = get_node(\"StandCollisionShape2D\")
onready var SlideCollisionShape2D = get_node(\"SlideCollisionShape2D\")

func _ready():
	if (!get_tree().root.is_queued_for_deletion()):
		default_collision()
		playerSprite = get_node(\"AnimatedSprite\")
		ammo = 10 # starting ammo
		power = 0 # starting power
		health = 100
		mainCharacter = true
		type = \"robot\"
		character_folder_name = \"Robot\"
		velocity = Vector2(0, 0)
		._move_right()
		print(\":: robot character spawed ::\")
		set_process(true)
	pass

func _process(delta):
	area_checks()
	# set player speed, gravity and animate sprite
	._animate_player(delta)
	
	# handle collision on the x-axis
	var collidedObject1 = move_and_collide(Vector2(velocity.x, 0))
	handle_collision(collidedObject1, false)

	# handle collision on the y-axis
	var collidedObject2 = move_and_collide(Vector2(0, velocity.y))
	handle_collision(collidedObject2, velocity.y > stationaryVelocity)
	
	# check for character control
	control_character()
	pass


func control_character():
	# reset default behaviour
	reset_character_sprite_states()
	
	if (!dazed):
		# Handle input events
		if (Input.is_action_just_pressed(\"action_1\") and !action1 and !action2 and !action3 and ammo > 0):
			action1 = true
			var bullet = bullet_scene.instance()
			bullet.speed = 800
			var bulletSprite = bullet.get_node(\"AnimatedSprite\")
			ammo -= 1
			
			if (!playerSprite.flip_h):
				bulletSprite.flip_h = false
				bullet.movementDirection = 1
				bullet.position = self.get_position()  - Vector2(-20, 5)
			else:
				bulletSprite.flip_h = true;
				bullet.movementDirection = -1
				bullet.position = self.get_position()  - Vector2(20, 5)
				
			#	Add the nodes to the current scene
			get_tree().root.add_child(bullet)
			
			if (currentJumpCount > 0):
				playerSprite.animation = \"robot_jump_shoot\"
			elif (facingDirection != 0):
				playerSprite.animation = \"robot_run_shoot\"
			elif (facingDirection == 0):
				playerSprite.animation = \"robot_shoot\"
		
			._emit_refresh_hud()
		elif (Input.is_action_just_pressed(\"action_2\") and !action1 and !action2 and !action3):
			action2 = true
			melee_attack_collision()
			if (currentJumpCount > 0):
				playerSprite.animation = \"robot_jump_melee\"
			else:
				playerSprite.animation = \"robot_melee\"
				
		elif (Input.is_action_just_pressed(\"action_3\") and facingDirection != 0 and !action3):
			action3 = true
			playerSprite.animation = \"robot_slide\"
			slide_attack_collision()
		elif (Input.is_action_just_pressed(\"move_jump\") and currentJumpCount < maxJumpCount and !action3):
			playerSpeedY = -JUMPFORCE
			currentJumpCount += 1
			playerSprite.animation = \"robot_jump\"
			playerSprite.frame = 0
			repeatFrames = false
			action1 = false
			action2 = false
			action3 = false
		elif (Input.is_action_pressed(\"move_left\")):
			._move_left()
		elif (Input.is_action_pressed(\"move_right\")):
			._move_right()
		elif (Input.is_action_pressed(\"respawn\")):
			._emit_reposition()
		else:
			if (!action2):
				facingDirection = 0
				if (currentJumpCount == 0 and !action1 and !action2 and !action3):
					playerSprite.animation = \"robot_idle\"
					repeatFrames = true
		pass


func reset_character_sprite_states():
	if (dazed):
		playerSprite.animation = \"robot_idle\"
	elif (currentJumpCount == 0 and (action1 or action2 or action3)):
		if (!playerSprite.is_playing()):
			repeatFrames = true
			if (facingDirection == 0):
				playerSprite.animation = \"robot_idle\"
			else: 
				playerSprite.animation = \"robot_walk\"
	elif (!action1 and !action2 and !action3 and currentJumpCount == 0):
		default_collision()
		repeatFrames = true
		if (facingDirection == 0):
			playerSprite.animation = \"robot_idle\"
		else: 
			playerSprite.animation = \"robot_walk\"
		
		
		
func area_checks():
	var objectsInCharacterArea = get_node(\"CharacterArea2D\").get_overlapping_bodies()
	if (objectsInCharacterArea.size() != 0):
		for body in objectsInCharacterArea:
			if (body and health > 0):
				var parent = body.get_parent()
				if (parent.is_in_group(\"barrier\")):
					get_node(\"CollisionShape2D\").disabled = false
					disableGravity = false
				if (body.is_in_group(\"ammo_pack\")):
					power += powerIncrease
					body.queue_free()
					._emit_refresh_hud()
				if (body.is_in_group(\"power_up\")):
					power += powerIncrease
					body.queue_free()
					._emit_refresh_hud()
				if (body.is_in_group(\"pit\")):
					power = 0
					ammo = 0
					health -= 100
					._emit_reload()
				if (body.is_in_group(\"enemy_character\")):
					if (body.health > 0 and (body.action1 or body.action2 or body.action3) and !dazed):
						._take_damage(20)
				if (body.is_in_group(\"enemy_saw\")):
					._take_damage(10)
		
		var objectsInAttackArea = get_node(\"AttackArea2D\").get_overlapping_bodies()
		if (objectsInAttackArea.size() != 0):
			for body in objectsInAttackArea:
				if (body and health > 0):
					var parent = body.get_parent()
					if (body.is_in_group(\"enemy_character\")):
						if (action2):
							body._take_damage(20)
							body._daze()
						elif (action3):
							body._take_damage(10)
							body._daze()
					if ((parent.is_in_group(\"brick\") or parent.is_in_group(\"power_up_brick\"))):
						parent.break_object()
	pass						
							

func handle_collision(collidedObject, resetJump):
	if (collidedObject):
		#if character is on the floor
		if (resetJump):
			playerSpeedY = 0
			currentJumpCount = 0
			repeatFrames = true;
	
#		var objectParent = collidedObject.collider.get_parent()
#		if (objectParent.is_in_group(\"float\")):
#			if (objectParent.canTween and currentJumpCount == 0 and facingDirection == 0):
#				self.position.x += (collidedObject.position.x - self.position.x)
	pass
	
func default_collision():
	AreaStandCollisionShape2D.disabled = false
	AreaSlideCollisionShape2D.disabled = true
	AreaLeftAttackCollisionShape2D.disabled = true
	AreaRightAttackCollisionShape2D.disabled = true
	StandCollisionShape2D.disabled = false
	SlideCollisionShape2D.disabled = true
	
func melee_attack_collision():
	if (movementDirection == 1):
		AreaRightAttackCollisionShape2D.disabled = false
	else:
		AreaLeftAttackCollisionShape2D.disabled = false

func slide_attack_collision():
	SlideCollisionShape2D.disabled = false
	AreaSlideCollisionShape2D.disabled = false
	StandCollisionShape2D.disabled = true
	AreaStandCollisionShape2D.disabled = true"

