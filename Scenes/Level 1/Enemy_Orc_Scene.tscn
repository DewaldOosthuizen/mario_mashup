script/source = "extends KinematicBody2D

# variables
var playerSpeedY = 0
var velocity = Vector2(0, 0)
var movementDirection = -1
var playerSprite
var deltaTime = 0
var moveFrames = [143, 144, 145, 146, 147, 148, 149, 150, 151]
var moveFrame = 0

const PLAYERSPEEDX = 200
const GRAVITY = 800

func _ready():
	playerSprite = get_node(\"Sprite\")
	set_process(true)
	pass
	
	
func _process(delta):
	deltaTime += delta
	_animate_player()
	
	playerSpeedY += GRAVITY * delta
	velocity.x = PLAYERSPEEDX * delta * movementDirection
	velocity.y = playerSpeedY * delta
	
	if(get_node(\"CollisionShape2D\").disabled):
		playerSprite.frame = 265
		velocity.y = 5
	
	if(self.position.y < -20):
		self.free()
	
	move_and_collide(Vector2(0, velocity.y))
	var collidedObject = move_and_collide(Vector2(velocity.x, 0))
	
	if (collidedObject):
		if (collidedObject.normal == Vector2(0,-1)):
			playerSpeedY = 0
		if (collidedObject.normal == Vector2(1,0)):
			movementDirection = 1
			playerSprite.flip_h = false
		elif (collidedObject.normal == Vector2(-1,0)):
			movementDirection = -1
			playerSprite.flip_h = true
	
	pass


func _animate_player():
	if(deltaTime > 0.1):
		if (moveFrame >= moveFrames.size()):
			moveFrame = 0
			
		playerSprite.frame = moveFrames[moveFrame]
		moveFrame += 1
		deltaTime = 0
	pass"

