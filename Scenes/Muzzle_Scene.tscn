var deltaTime = 0

func _ready():
	set_process(true)
	self.animation = \"muzzle\"
	pass
	
	
func _process(delta):
	deltaTime = deltaTime + delta
	
	if (self.frame == self.get_sprite_frames().get_frame_count(self.animation) - 1):
		self.queue_free()
	
	if (deltaTime > 0.1):
		# after all frames have been played, remove muzzle
		if (self.frame < self.get_sprite_frames().get_frame_count(self.animation) - 1):
			self.frame += 1
		else:
			self.queue_free()
			
		deltaTime = 0
		
	
	pass
"

